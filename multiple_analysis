import numpy as np
import matplotlib.pyplot as plt
x = np.array([0, 6])

y = np.array([0, 250])

plt.plot(x, y)
plt.show()

a = np.array([1, 8])

b = np.array([3, 10])


plt.plot(a,b)
plt.show()

